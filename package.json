{
  "name": "activity-recognition",
  "version": "1.8.0",
  "description": "Script para criar eventos ao reconhecer uma atividade.",
  "settingsSchema": {
    "display": "form",
    "settings": {
      "pdf": {
        "id": "1ec0f8ee-6685-5d98-a847-26f67b67d6f0",
        "src": "https://files.form.io/pdf/5692b91fd1028f01000407e3/file/1ec0f8ee-6685-5d98-a847-26f67b67d6f0"
      }
    },
    "components": [
      {
        "label": "Salvar dados na tabela de horimetros",
        "tooltip": "Cada vez que a atividade muda, salvar um registro na tabela de horimetros. Não modifica a criação de eventos.",
        "tableView": false,
        "defaultValue": false,
        "key": "enableHourmeters",
        "type": "checkbox",
        "input": true
      },
      {
        "label": "Habilitar alarme se maquina tiver atividade quando bloqueada",
        "tooltip": "Se a maquina inicia alguma atividade, mas a maquina deveria estar bloqueada, gerar um evento no banco de dados e dar um alarme ao usuario.",
        "tableView": false,
        "defaultValue": false,
        "key": "enableDoNotMoveWhileLocked",
        "type": "checkbox",
        "input": true
      },
      {
        "label": "Alarme",
        "key": "alarme",
        "conditional": {
          "show": true,
          "when": "enableDoNotMoveWhileLocked",
          "eq": "true"
        },
        "type": "well",
        "input": false,
        "tableView": false,
        "components": [
          {
            "label": "Mínimo de certeza",
            "suffix": "%",
            "mask": false,
            "tableView": false,
            "defaultValue": 85,
            "delimiter": false,
            "requireDecimal": false,
            "inputFormat": "plain",
            "truncateMultipleSpaces": false,
            "validate": {
              "required": true,
              "min": 0,
              "max": 100
            },
            "key": "minimumAccuracy",
            "type": "number",
            "input": true
          },
          {
            "label": "Mensagem",
            "autoExpand": false,
            "tableView": true,
            "validate": {
              "required": true,
              "minLength": 3,
              "maxLength": 300
            },
            "key": "message",
            "type": "textarea",
            "rows": 1,
            "input": true,
            "defaultValue": "Maquina bloqueada! O mau uso será reportado."
          },
          {
            "label": "Habilitar botão para desativar alarme",
            "tableView": false,
            "key": "enableDismissButton",
            "type": "checkbox",
            "input": true,
            "defaultValue": false
          }
        ]
      },
      {
        "type": "button",
        "label": "Submit",
        "key": "submit",
        "disableOnInvalid": true,
        "input": true,
        "tableView": false
      }
    ]
  },
  "license": "MIT",
  "private": true,
  "scripts": {
    "build": "webpack --mode production",
    "watch": "webpack --mode production --watch",
    "build-copy": "yarn build && (cat dist/bundle.js | pbcopy) && du -sh dist/*.js",
    "size": "npm run build && size-limit",
    "deploy": "node .scripts/deploy.js",
    "deploy-force": "node .scripts/deploy.js --force",
    "minor": "npm run build && bump minor --commit --tag --push --all",
    "release": "npm run build && bump major --commit --tag --push --all",
    "test": "jest"
  },
  "browserslist": [
    "ie 6"
  ],
  "size-limit": [
    {
      "path": "dist/bundle.js",
      "limit": "100 kb",
      "gzip": false
    }
  ],
  "devDependencies": {
    "@babel/core": "7.19.3",
    "@babel/plugin-transform-arrow-functions": "7.18.6",
    "@babel/preset-env": "7.19.3",
    "@babel/preset-typescript": "7.18.6",
    "@jsdevtools/version-bump-prompt": "6.1.0",
    "@size-limit/preset-big-lib": "8.1.0",
    "@types/commander": "2.12.2",
    "@types/firebase": "3.2.1",
    "@types/jest": "29.1.2",
    "@types/lodash": "4.14.186",
    "@types/uuid": "8.3.4",
    "babel-loader": "8.2.5",
    "brotli-webpack-plugin": "1.1.0",
    "commander": "9.4.1",
    "compression-webpack-plugin": "10.0.0",
    "graphql": "16.6.0",
    "graphql-request": "5.0.0",
    "inquirer": "9.1.3",
    "jest": "29.1.2",
    "mobx-keystone": "1.1.0",
    "semver": "7.3.8",
    "size-limit": "8.1.0",
    "ts-loader": "9.4.1",
    "typed-emitter": "2.1.0",
    "typescript": "4.8.4",
    "webpack": "5.74.0",
    "webpack-cli": "4.10.0"
  },
  "dependencies": {
    "@fermuch/monoutils": "0.2.0",
    "@fermuch/telematree": "9.23.0",
    "cross-fetch": "3.1.5",
    "firebase": "9.11.0",
    "lodash": "4.17.21",
    "mobx": "6.6.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "web.js",
      "js",
      "web.ts",
      "ts",
      "web.tsx",
      "tsx",
      "json",
      "web.jsx",
      "jsx",
      "node"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/private/jest/setup.ts"
    ]
  }
}
